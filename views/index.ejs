<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <!--STYLESHEET LINK-->
    <link rel="stylesheet" href="/style.css">
    <!--GOOGLE FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <!--ICONS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

</head>

<body>
   
    <section class="todo-container box item">   
        <section class="todo ">
            <h1 id="heading">To Do List</h1>
           
            <ul class="todo-list " >
                <% todoTasks.forEach(details => { %>
                <li class="todo-list-item item" >
                   <div class="flex">
                    <div class="todo-list-item-title">
                        <%= details.title %>
                    </div>
                    <div class="edita">
                        <a href="/edit/<%=details._id %>" class="edit"> <span class="fas fa-edit">  </span></a>
                        <a href="/edit/remove/<%=details._id %>" class="edit"> <span class="fas fa-times">  </span></a>
                    </div>
                    
                   </div>
                    <div class="todo-list-item-content ">
                        <%= details.content %>
                    </div>
                </li>
               <%  }) %>
            </ul>

            <form action="/" method="POST" class="todo-header">
                <input type="text" name="title" placeholder="Enter a New Item">
                <input type="text" name="content" placeholder="Enter Details">
               <br>
                <button type="submit" class="submit">+</button>
            </form>
        </section>
    </section>
</body>
